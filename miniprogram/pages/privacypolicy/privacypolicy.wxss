/* pages/privacypolicy/privacypolicy.wxss */
.container {
    background-color: #f5f7fa;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    color: #333;
    line-height: 1.6;
}
.content {
    flex: 1;
    padding: 40rpx 30rpx;
    overflow-y: auto;
    background-color: #fff;
}
.section {
    margin-bottom: 50rpx;
}
.section-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 25rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #eee;
}
.section-content {
    padding-left: 0rpx;
}
.paragraph {
    display: block;
    margin-bottom: 25rpx;
    font-size: 30rpx;
    color: #555;
}
.contact-info {
    background: #f9f9f9;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    margin: 50rpx 0;
    text-align: center;
}
.contact-title {
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 25rpx;
    color: #2575fc;
}
.contact-text {
    display: block;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #555;
}
.email-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #2575fc;
    color: white;
    padding: 20rpx 40rpx;
    border-radius: 50rpx;
    font-weight: 500;
    margin-top: 15rpx;
}
.date-info {
    text-align: center;
    color: #888;
    font-size: 26rpx;
    margin-top: 40rpx;
    padding-top: 30rpx;
    border-top: 2rpx solid #eee;
}
.date-info text {
    display: block;
    margin-bottom: 10rpx;
}
.footer {
    text-align: center;
    padding: 30rpx;
    color: #888;
    font-size: 26rpx;
    background: #f9f9f9;
}