/* pages/login/login.wxss */
.login-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #f889e9 0%, #eea35d 100%);
    padding: 40rpx;
    box-sizing: border-box;
}
.login-card {
    width: 100%;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
}
.avatar-section{
    margin-bottom: 20rpx;
}
.avatar-tip,.nickname-tip {
    font-size: 26rpx;
    color: #ffffff;
    margin-bottom: 15rpx;
    text-align: center;
}
.avatar-btn {
    width: 180rpx;
    height: 180rpx;
    padding: 0;
    background: none;
    border: none;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}
.avatar-btn::after {
    border: none;
}
.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 6rpx solid #f0f5ff;
}
.nickname-wrapper {
    margin-bottom: 25rpx;
}
.nickname-input {
    font-size: 32rpx;
    text-align: center;
    font-weight: bold;
    color: #fff;
    padding: 20rpx 0;
}
.word-count {
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.6);
}
.login-btn {
    width: 100%;
    height: 90rpx;
    line-height: 60rpx;
    border-radius: 50rpx;
    background: linear-gradient(to right, #f889e9 0%, #eea35d);
    color: #fff;
    font-size: 32rpx;
    margin: 20rpx 0 40rpx;
    box-shadow: 0 10rpx 20rpx rgba(37, 117, 252, 0.3);
}
.login-btn:active {
    color: #fff;
    opacity: 0.9;
}
.agreement {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
    flex-wrap: wrap;
    justify-content: center;
}
.link {
    color: rgb(230, 240, 140);
}