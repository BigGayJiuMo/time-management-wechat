/* pages/usercenter/usercenter.wxss */
.usercenter-container {
    padding: 20rpx;
    background: linear-gradient(135deg, #f889e9 0%, #eea35d 100%);
    min-height: 97.3vh;
}
/* 用户信息区域 */
.usercenter-card{
    width: 100%;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    border-radius: 16rpx;
}
.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 4rpx solid #f0f0f0;
}
.nickname {
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 50rpx;
    color: #fff;
}
/* 操作按钮 */
.actions {
    padding: 30rpx;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
}
.login-btn, .logout-btn {
    width: 100%;
    height: 90rpx;
    line-height: 60rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    box-shadow: 0 10rpx 20rpx rgba(37, 117, 252, 0.3);
}
.login-btn {
    background: linear-gradient(135deg, #f889e9 0%, #eea35d 100%);
    color: #fff;
}
.logout-btn {
    background: linear-gradient(135deg, #f889e9 0%, #eea35d 100%);
    color: #fff;
    border: 1rpx solid #ff8e4d;
}
/* 功能区 */
.section {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
}
.section-title {
    padding: 24rpx 32rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
}
.section-content {
    padding: 0 32rpx;
    color: #fff;
}
.item {
    padding: 28rpx 0;
    font-size: 30rpx;
}
.item:last-child {
    border-bottom: none;
}
.item {
    position: relative;
    transition: all 0.3s;
}
.item:active {
    background-color: rgba(255, 255, 255, 0.1);
}